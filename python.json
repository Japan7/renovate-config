{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Helper preset for Python projects",
  "packageRules": [
    {
      "matchDepNames": ["python"],
      "matchUpdateTypes": ["major", "minor"],
      "automerge": false
    },
    {
      "matchDepTypes": ["dev"],
      "rangeStrategy": "pin"
    }
  ]
}
